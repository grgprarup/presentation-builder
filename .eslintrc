{
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "prettier/prettier": "error",
        "no-var": "error",
        "prefer-const": "error",
        "no-console": "off",
        "no-debugger": "warn",
        "no-undef": "error",
        "no-unused-vars": "warn",
        "quotes": ["error", "single"],
        "semi": ["error", "never"]
    }
}
